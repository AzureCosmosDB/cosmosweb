@{
    ViewData["Title"] = "Azure Cosmos DB | Multi-model. Globally distributed. Massively scalable.";
    ViewData["Description"] = "Azure Cosmos DB is Microsoft's globally distributed, massively scalable, multi-model database service.";
    ViewData["BodyCssClass"] = "home";

    var swimLaneHelper = new cosmosweb.Helpers.SwimLaneHelper();
}

@section scripts {
    <script src="~/bundles/js/home.js" asp-append-version="true" environmental="true"></script>
}

@section header  {
    <h1>Got Cosmos?</h1>
    <p class="lead">Globally distributed. Massively scalable. Multi-model.<br />A fully managed database service for building <span class="tagline">cloud scale</span> apps.</p>
    <p>
        <a class="btn btn-white btn-lg btn-scale" href="~/learn/" role="button">Get Started</a>
        <a class="btn btn-purple btn-lg btn-scale btn-normal-weight" href="https://azure.microsoft.com/try/cosmosdb/" target="_blank" role="button">Try for Free</a>
    </p>
}

<div class="@swimLaneHelper.GetSwimLaneCssClass(includeDefaultMargins:false)">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-6">
                <div class="max-height-200">
                    <img src="~/images/home/what-is-cosmos.svg" role="presentation" alt="" class="img-responsive img-responsive-450" asp-append-version="true" />
                </div>
                <h2 class="h3 mt-20">What is Azure Cosmos DB?</h2>
                <p>
                    Azure Cosmos DB is Microsoft's globally-distributed multi-model database service.
                </p>
                <p><a class="mt-10 mb-20" href="~/about">Learn more</a></p>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="max-height-200">
                    <img src="~/images/home/architecture-guides.svg" role="presentation" alt="" class="img-responsive img-responsive-450" asp-append-version="true" />
                </div>
                <h2 class="h3 mt-20">Architecture guides</h2>
                <p>
                    Architectural diagrams, source code, and practical advice to help you build with Azure Cosmos DB.
                </p>
                <p><a class="mt-10 mb-20" href="~/architecture">Explore guidance</a></p>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="max-height-200">
                    <img src="~/images/home/why-cosmos.svg" role="presentation" alt="" class="img-responsive img-responsive-450" asp-append-version="true" />
                </div>
                <h2 class="h3 mt-20">Why choose Azure Cosmos DB</h2>
                <p>
                    Find out why customers all over the world, in many different industries, rely on Azure Cosmos DB.
                </p>
                <p><a class="mt-10 mb-20" href="~/about/customers">Meet customers</a></p>
            </div>
        </div>
    </div>
</div>

<div class="@swimLaneHelper.GetSwimLaneCssClass()">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-6">
                <div class="max-height-200">
                    <img src="~/images/home/code-samples.svg" role="presentation" alt="" class="img-responsive img-responsive-450" asp-append-version="true" />
                </div>
                <h2 class="h3 mt-20">Code Samples</h2>
                <p>
                    Check out all the code samples across multiple langues built around Azure Cosmos DB.
                </p>
                <p><a class="mt-10 mb-20" href="https://azure.microsoft.com/en-us/resources/samples/?sort=0&service=cosmos-db" target="_blank">Browse samples</a></p>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="max-height-200">
                    <img src="~/images/home/workshops.svg" role="presentation" alt="" class="img-responsive img-responsive-450" asp-append-version="true" />
                </div>
                <h2 class="h3 mt-20">Workshops</h2>
                <p>
                    Find online and in-person training.
                </p>
                <p><a class="mt-10 mb-20" href="~/workshops">Find workshops</a></p>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="max-height-200">
                    <img src="~/images/home/presentations.svg" role="presentation" alt="" class="img-responsive img-responsive-450" asp-append-version="true" />
                </div>
                <h2 class="h3 mt-20">Presentations</h2>
                <p>
                    Watch our latest presentations, download decks.
                </p>
                <p><a class="mt-10 mb-20" href="~/presentations">See presentations</a></p>
            </div>
        </div>
    </div>
</div>

<div class="@swimLaneHelper.GetSwimLaneCssClass(includeDefaultMargins:false) home-customers pt-40 pb-40">
    <div class="container text-center">
        <a href="~/about/customers#johnson"><img src="~/images/customers/johnson.png" height="83" width="150" alt="Johnson Controls is an Azure Cosmos DB customer." asp-append-version="true" /></a>
        <a href="~/about/customers#allscripts"><img src="~/images/customers/allscripts.png" height="31" width="150" alt="Allscripts is an Azure Cosmos DB customer." asp-append-version="true" /></a>
        <a href="~/about/customers#asos"><img src="~/images/customers/asos.png" height="113" width="150" alt="asos is an Azure Cosmos DB customer." asp-append-version="true" /></a>
        <a href="~/about/customers#siemens"><img src="~/images/customers/siemens.png" height="35" width="150" alt="Siemens Healthineers is an Azure Cosmos DB customer." asp-append-version="true" /></a>
        <a href="~/about/customers#rolls"><img src="~/images/customers/rolls.png" height="35" width="150" alt="Rolls-Royce is an Azure Cosmos DB customer." asp-append-version="true" /></a>
    </div>
</div>

@{ await Html.RenderPartialAsync("_TryCosmos"); }
