@{
    ViewData["Title"] = "IoT and Stream Processing Architecture Guidance";
    ViewData["Description"] = "Learn how to architect IoT and Stream Processing applications with Azure Cosmos DB.";
    var swimLaneHelper = new cosmosweb.Helpers.SwimLaneHelper();
}

@section header {
    <h1>Internet of Things architectural guidance</h1>
}

<div class="@swimLaneHelper.GetSwimLaneCssClass()">
    <div class="container">
        <div class="row vertical-align-sm">
            <div class="@swimLaneHelper.GetIllustrationCssClass()">
                <img src="~/images/architecture/kafka-connect-tv.jpg" alt="" role="presentation" class="img-responsive img-responsive-center img-responsive-swimlane" asp-append-version="true" />
            </div>
            <div class="@swimLaneHelper.GetContentCssClass()">
                <h2>Streaming using Kafka Connect for Azure Cosmos DB</h2>
                <p>Watch this episode of Azure Cosmos DB to learn how to configure and use Kafka Connect for Azure Cosmos DB to build streaming applications.</p> 
                Then get started by reading <a href="https://docs.microsoft.com/azure/cosmos-db/sql/kafka-connector" target="_blank">Overview of Kafka Connect for Azure Cosmos DB</a>
                <p><a href="https://youtu.be/vOdX-FPVKqA" target="_blank" class="btn btn-default">Watch episode</a></p>
            </div>
        </div>
    </div>
</div>

<div class="@swimLaneHelper.GetSwimLaneCssClass()">
    <div class="container">
        <div class="row vertical-align-sm">
            <div class="@swimLaneHelper.GetIllustrationCssClass()">
